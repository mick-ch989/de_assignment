{
  "dashboard": {
    "title": "Streaming Pipeline Dashboard",
    "tags": ["streaming", "kafka", "spark"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Messages In",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "kafka_topic_partition_current_offset{topic=\"input_events\"}",
            "legendFormat": "{{partition}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Spark Master - Active Applications",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "spark_master_apps_active",
            "legendFormat": "Active Apps"
          }
        ]
      },
      {
        "id": 3,
        "title": "Spark Workers - Cores Used",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "spark_worker_cores_used",
            "legendFormat": "{{instance}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum{topic=\"input_events\"}",
            "legendFormat": "Lag"
          }
        ]
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  }
}
